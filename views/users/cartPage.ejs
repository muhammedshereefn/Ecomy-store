<%- include('userSubHeader') %>

   <% if (cart) { %>
    <% if (cart.items.length > 0) { %>
      <main class="main">
        
        <section class="mt-50 mb-50"  >
           <% if (cart) { %>
            <div class="container">
              <div class="row">
                  <div class="col-12">
                      <div class="table-responsive">
                        
                        
                        <table class="table shopping-summery text-center clean">
                          <thead>
                            <tr class="main-heading gruppo-regular" style="font-size: 16px;">
                              <th class="hide-mobile"></th>
                              <th scope="col">Image</th>
                              <th scope="col">Name</th>
                              <th scope="col">Quantity</th>
                              <th scope="col">Subtotal</th>
                              <th scope="col">Remove</th>
                            </tr>
                          </thead>
                          <tbody>
                            <% if (cart.items.length > 0) { %>
                              <% cart.items.forEach(products => { %>
                                <tr class="gruppo-regular" style="font-size: 17px;">
                                  <td></td>
                                  <td data-title="Image">
                                    <img src="<%= products.product.coverimage %>" alt="<%= products.product.name %>">
                                  </td>
                                  <td data-title="Name"><%= products.product.name %></td>
                                  <% if (products.quantity > products.product.quantity) { %>
                                    <td data-title="Quantity" class="text-danger">Stock Limit Exceeded</td>
                                  <% } else { %>
                                    <td data-title="Quantity">
                                      <div class="input-group quantity-control d-flex justify-content-center">
                                        <button class="btn btn-outline-secondary bg-dark" type="button" id="cartDecrease" onclick="updateQuantity('<%= products.product._id %>', -1)">-</button>
                                        <span class="input-group-text quantity-value" style="font-size: 23px;"  id="quantityValue<%= products.product._id %>"><%= products.quantity %></span>
                                        <button class="btn btn-outline-secondary bg-dark" style="font-size: 23px;" type="button" id="cartIncrease" onclick="updateQuantity('<%= products.product._id %>', 1)">+</button>
                                      </div>
                                    </td>
                                  <% } %>
                                  <td data-title="Subtotal" id="total<%= products.product._id %>">₹ <%= products.product.price * products.quantity %></td>
                                  <td data-title="Remove">
                                    <button class="btn btn-danger remove-btn rounded bg-dark " style="font-size: 15px;"  onclick="removeItem('<%= products.product._id %>')">Remove</button>
                                  </td>
                                </tr>
                              <% }) %>
                            <% } else { %>
                              <tr>
                                <td colspan="6" class="text-center">Cart is empty</td>
                              </tr>
                            <% } %>
                          </tbody>
                        </table>
                        
                      </div>
                      <% if (cart) { %>
                        <div class="cart-action text-end">
                        
                      </div>
                      <% } %>
                      <div class="divider center_icon mt-50 mb-50"><i class=""></i></div>
                      <div class="row mb-50">
                       
                        <% let proceedToCheckout = true; %>

                        <% cart.items.forEach(products => { %>
                          <% if (products.quantity > products.product.quantity) { %>
                            <% proceedToCheckout = false; %>
                          <% } %>
                        <% }); %>
                        
                        <div class="col-lg-6 col-md-12 gruppo-regular">
                          <div class="border p-md-4 p-30 border-radius cart-totals">
                            <div class="heading_s1 mb-3">
                              <h4 class="gruppo-regular" style="font-size: 23px;"><span style="color: #e44d26;">G</span>o to checkout <svg xmlns="http://www.w3.org/2000/svg" viewBox="-4 -2 24 24" width="23" fill="currentColor"><path d="M2 4.386V8a9.02 9.02 0 0 0 3.08 6.787L8 17.342l2.92-2.555A9.019 9.019 0 0 0 14 8V4.386l-6-2.25-6 2.25zM.649 2.756L8 0l7.351 2.757a1 1 0 0 1 .649.936V8c0 3.177-1.372 6.2-3.763 8.293L8 20l-4.237-3.707A11.019 11.019 0 0 1 0 8V3.693a1 1 0 0 1 .649-.936zm6.29 7.512l3.536-3.536a1 1 0 0 1 1.414 1.414L7.646 12.39a1 1 0 0 1-1.414 0l-2.121-2.121a1 1 0 0 1 1.414-1.414l1.414 1.414z"></path></svg></h4>
                            </div>
                            <div class="table-responsive">
                             
                            </div>
                            <% if (proceedToCheckout) { %>
                              <a href="/checkout" class="btn bg-dark">
                                <i class="fi-rs-box-alt mr-10"></i> Proceed To CheckOut
                              </a>
                            <% } else { %>
                              <p class="text-danger">Some items in your cart exceed available quantity. Adjust quantities or remove to proceed.</p>
                            <% } %>
                          </div>
                        </div>
                      </div>
                  </div>
              </div>
          </div>
          <% } else { %>
           <div class="container d-flex justify-content-center align-items-center"
           style="height: 300px; width: 100%;">
           <div style="text-align: center;"><p class="mb-2 gruppo-regular" style="font-size: 18px;"> CART IS EMPTY</p> <br><a class="btn btn-sucess" href="/homeProduct">Continue Shopping</a></div>
           </div>
           <% } %>

        </section>
    </main>
    <% } else { %>
      <div class="container d-flex justify-content-center align-items-center"
      style="height: 300px; width: 100%;">
      <div style="text-align: center;"><p class="mb-2 gruppo-regular" style="font-size: 18px;">YOUR CART IS EMPTY</p> <br><a class="btn btn-sucess" href="/homeProduct">Continue Shopping</a></div>
      </div>
    <% } %>
    <% } else { %>
     <div class="container d-flex justify-content-center align-items-center"
           style="height: 300px; width: 100%;">
           <div style="text-align: center;"><p class="mb-2 gruppo-regular" style="font-size: 23px;">YOUR CART IS EMPTY 😕</p> <br><a class="btn btn-dark bg-dark gruppo-regular" style="font-size: 17px;" href="/homeProduct">Continue Shopping</a></div>
           </div>
   <% } %>

   
