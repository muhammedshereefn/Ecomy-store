<%- include('userSubHeader') %>
<style>
  .wallet-container {
    background-color: #f8f9fa;
    border: 1px solid #d1d1d1;
    border-radius: 8px;
    padding: 20px;
    text-align: center;
  }

  .wallet-balance {
    font-size: 24px;
    font-weight: bold;
    color: #007bff;
    margin-bottom: 20px;
  }

  .update-wallet-btn {
    background-color: #28a745;
    color: #fff;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  .update-wallet-btn:hover {
    background-color: #218838;
  }
</style>

    <main class="main mt-50">
        <h3 class="text-center mb-4"><span style="color: #e44d26;">P</span>ROFILE</h3>
      
      <section class="pt-50 pb-150">
        
        <div class="container">
           
          <div class="row">

            

            <div class="col-lg-10 m-auto">
              <div class="row">
                <div class="col-md-4">
                    
                  <div class="dashboard-menu">
                    <ul class="nav flex-column" role="tablist">
                      <li class="nav-item">
                        <a
                          class="nav-link active"
                          id="dashboard-tab"
                          data-bs-toggle="tab"
                          href="#dashboard"
                          role="tab"
                          aria-controls="dashboard"
                          aria-selected="false"
                          ><i class="fi-rs-settings-sliders mr-10"></i
                          >Dashboard</a
                        >
                      </li>

                      <li class="nav-item">
                        <a
                          class="nav-link"
                          id="address-tab"
                          data-bs-toggle="tab"
                          href="#address"
                          role="tab"
                          aria-controls="address"
                          aria-selected="true"
                          ><i class="fi-rs-marker mr-10"></i>My Address</a
                        >
                      </li>
                      <li class="nav-item">
                        <a class="nav-link" href="/logout"
                          ><i class="fi-rs-sign-out mr-10"></i>Logout</a
                        >
                      </li>
                    </ul>
                  </div>
                </div>
                <div class="col-md-8">
                  <div class="tab-content dashboard-content">
                    <div
                      class="tab-pane fade active show"
                      id="dashboard"
                      role="tabpanel"
                      aria-labelledby="dashboard-tab"
                    >
                      <div class="card">
                         <div class="card-header ">
                                              <h5 class="mb-0 text-white"></h5>
                                            </div>                   
                        <div class="card p-3 py-4 ">
                          <div class="text-center">
                            <img
                              src="https://img.freepik.com/free-vector/businessman-character-avatar-isolated_24877-60111.jpg?size=338&ext=jpg&ga=GA1.1.44546679.1698969600&semt=ais"
                              width="100"
                              class="rounded-circle"
                            />
                          </div>

                          <div class="text-center mt-3">
                            <!-- name -->
                            <h5 class="mt-2 mb-0"><%= user.name %></h5>

                            <!-- email -->

                            <span><%= user.email %></span>

                            <div class="px-4 mt-1">
                              <p class="fonts">
                               <%= user.mobile %>
                              </p>
                            </div>

                            <ul class="social-list">
                              <li><i class="fa fa-facebook"></i></li>
                              <li><i class="fa fa-dribbble"></i></li>
                              <li><i class="fa fa-instagram"></i></li>
                              <li><i class="fa fa-linkedin"></i></li>
                              <li><i class="fa fa-google"></i></li>
                            </ul>
                          </div>                        
                        </div>
                      </div>
                    </div>
                    <div
                      class="tab-pane fade"
                      id="orders"
                      role="tabpanel"
                      aria-labelledby="orders-tab"
                    >
                    </div>
                    <div
                      class="tab-pane fade"
                      id="address"
                      role="tabpanel"
                      aria-labelledby="address-tab"
                    >
                    <div class="col-12">
                        <div class="row d-flex">   
                        <!-- profilePage.ejs -->
                        <% for (let i = 0; i < userAddresses.length; i++) { %>
                            <div class="col-6">
                                <div class="card">
                                    <div class="card-header bg-success">
                                        <h5 class="mb-0 text-white">Address</h5>
                                    </div>
                                    <div class="card-body">
                                        <address>
                                            <%= userAddresses[i].addressType %> <%= userAddresses[i].houseNo %> <%= userAddresses[i].street %><br />
                                            <%= userAddresses[i].landmark ? userAddresses[i].landmark  : '' %>
                                            <%= userAddresses[i].city %>, <%= userAddresses[i].state %> <%= userAddresses[i].pincode %> <%= userAddresses[i].country %><br />
                                            Phone: <%= userAddresses[i].phoneNumber %>
                                        </address>
                                        <p><%= userAddresses[i].district %></p>
                                        <div class="row">
                                          <div class="col-12 d-flex justify-content-between align-items-center">
                                              <a href="/editAddress/<%= userAddresses[i]._id %>" class="btn btn-warning btn-sm">Edit</a>
                                      
                                              <!-- Add a form for the delete button -->
                                              <form action="/deleteAddress/<%= userAddresses[i]._id %>" method="post" style="display:inline;">
                                                  <button type="submit" class="btn btn-danger btn-sm bg-danger" onclick="return confirmDelete()">Delete</button>
                                              </form>
                                          </div>
                                      </div>
                                      
                                    </div>
                                </div>
                            </div>
                        <% } %>
                      </div>
                        <div class="mt-3">
                            <!-- Add Address Button -->
                            <a href="/addAddress"><button class="btn btn-small btn-primary" id="addAddressBtn">Add Address</button></a> 
                        </div>
                    </div>
                    </div>
                    </div>
                    <div
                      class="tab-pane fade"
                      id="account-detail"
                      role="tabpanel"
                      aria-labelledby="account-detail-tab"
                    >
                  
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>

   
