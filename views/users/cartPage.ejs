<%- include('userSubHeader') %>

   <% if (cart) { %>
    <% if (cart.items.length > 0) { %>
      <main class="main">
        
        <section class="mt-50 mb-50">
           <% if (cart) { %>
            <div class="container">
              <div class="row">
                  <div class="col-12">
                      <div class="table-responsive">
                          <table class="table shopping-summery text-center clean">
                            <thead>
                                <tr class="main-heading">
                                    <th></th>
                                    <th scope="col">Image</th>
                                    <th scope="col">Stock</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Quantity</th>
                                    <th scope="col">Subtotal</th>
                                    <th scope="col">Remove</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (cart.items.length > 0) { %>
                                    <% cart.items.forEach(products => { %>
                                        <tr>
                                            <td></td>
                                            <td><img src="<%=products.product.coverimage %>" alt="<%=products.product.name %>"></td>
                                            <td><%= products.product.quantity %></td>
                                            <td><%=products.product.name %></td>
                                            <td><%=products.product.price %></td>
                        
                                            <!-- Check if the cart quantity is greater than stock quantity -->
                                            
                                            <% if (products.quantity > products.product.quantity) { %>
                                                <td class="text-danger">Stock Limit Exceeded</td>
                                            <% } else { %>
                                               
                        
                                              <td class="align-middle">
                                                <div class="input-group quantity-control d-flex justify-content-center">
                                                    <button class="btn btn-outline-secondary bg-dark" type="button" id="cartDecrease" onclick="updateQuantity('<%= products.product._id %>', -1)">-</button>
                                                    <span class="input-group-text quantity-value" id="quantityValue<%= products.product._id %>"><%= products.quantity %></span>
                                                    <button class="btn btn-outline-secondary bg-dark" type="button" id="cartIncrease" onclick="updateQuantity('<%= products.product._id %>', 1)">+</button>
                                                </div>
                                            </td>
                                            <% } %>
                        
                                            <td id="total<%= products.product._id %>"><%= products.product.price * products.quantity %></td>
                                            <td>
                                              <button class="btn btn-danger remove-btn rounded bg-dark" onclick="removeItem('<%=products.product._id %>')">Remove</button>
                                          </td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="7" class="text-center">Cart is empty</td>
                                    </tr>
                                <% } %>
                                <tr>
                                    <td colspan="6" class="text-end">
                                      
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                      </div>
                      <% if (cart) { %>
                        <div class="cart-action text-end">
                        
                      </div>
                      <% } %>
                      <div class="divider center_icon mt-50 mb-50"><i class=""></i></div>
                      <div class="row mb-50">
                       
                        <% let proceedToCheckout = true; %>

                        <% cart.items.forEach(products => { %>
                          <% if (products.quantity > products.product.quantity) { %>
                            <% proceedToCheckout = false; %>
                          <% } %>
                        <% }); %>
                        
                        <div class="col-lg-6 col-md-12">
                          <div class="border p-md-4 p-30 border-radius cart-totals">
                            <div class="heading_s1 mb-3">
                              <h4><span style="color: #e44d26;">C</span>ontinue to checkout</h4>
                            </div>
                            <div class="table-responsive">
                              <table class="table">
                                <tbody>
                                  <tr>
                                </tr>
                              </tbody>
                              </table>
                            </div>
                            <% if (proceedToCheckout) { %>
                              <a href="/checkout" class="btn bg-dark">
                                <i class="fi-rs-box-alt mr-10"></i> Proceed To CheckOut
                              </a>
                            <% } else { %>
                              <p class="text-danger">Some items in your cart exceed available quantity. Adjust quantities or remove to proceed.</p>
                            <% } %>
                          </div>
                        </div>
                      </div>
                  </div>
              </div>
          </div>
          <% } else { %>
           <div class="container d-flex justify-content-center align-items-center"
           style="height: 300px; width: 100%;">
           <div style="text-align: center;"><p class="mb-2"> CART IS EMPTY</p> <br><a class="btn btn-sucess" href="/homeProduct">Continue Shopping</a></div>
           </div>
           <% } %>

        </section>
    </main>
    <% } else { %>
      <div class="container d-flex justify-content-center align-items-center"
      style="height: 300px; width: 100%;">
      <div style="text-align: center;"><p class="mb-2"> CART IS EMPTY</p> <br><a class="btn btn-sucess" href="/homeProduct">Continue Shopping</a></div>
      </div>
    <% } %>
    <% } else { %>
     <div class="container d-flex justify-content-center align-items-center"
           style="height: 300px; width: 100%;">
           <div style="text-align: center;"><p class="mb-2"> CART IS EMPTY</p> <br><a class="btn btn-sucess" href="/homeProduct">Continue Shopping</a></div>
           </div>
   <% } %>

   
      <!-- Vendor JS-->
      <script src="/user/assets/js/vendor/modernizr-3.6.0.min.js"></script>
      <script src="/user/assets/js/vendor/jquery-3.6.0.min.js"></script>
      <script src="/user/assets/js/vendor/jquery-migrate-3.3.0.min.js"></script>
      <script src="/user/assets/js/vendor/bootstrap.bundle.min.js"></script>
      <script src="/user/assets/js/plugins/slick.js"></script>
      <script src="/user/assets/js/plugins/jquery.syotimer.min.js"></script>
      <script src="/user/assets/js/plugins/wow.js"></script>
      <script src="/user/assets/js/plugins/jquery-ui.js"></script>
      <script src="/user/assets/js/plugins/perfect-scrollbar.js"></script>
      <script src="/user/assets/js/plugins/magnific-popup.js"></script>
      <script src="/user/assets/js/plugins/select2.min.js"></script>
      <script src="/user/assets/js/plugins/waypoints.js"></script>
      <script src="/user/assets/js/plugins/counterup.js"></script>
      <script src="/user/assets/js/plugins/jquery.countdown.min.js"></script>
      <script src="/user/assets/js/plugins/images-loaded.js"></script>
      <script src="/user/assets/js/plugins/isotope.js"></script>
      <script src="/user/assets/js/plugins/scrollup.js"></script>
      <script src="/user/assets/js/plugins/jquery.vticker-min.js"></script>
      <script src="/user/assets/js/plugins/jquery.theia.sticky.js"></script>
      <!-- Template  JS -->
      <script src="./user/assets/js/main.js?v=3.4"></script>
      <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

      <script>
        async function removeItem(productId) {
            const id = productId;
    
            try {
                const result = await Swal.fire({
                    title: 'Remove From Cart',
                    text: 'Are you sure you want to remove this product from cart?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Yes, cancel it!'
                });
    
                if (result.isConfirmed) {
                    const response = await fetch('/removeItem', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ id })
                    });
    
                    if (response.ok) {
                        location.reload(); 
                    } else {
                        console.error('Error:', response.statusText);
                    }
                }
            } catch (error) {
                console.error('Error:', error);
            }
        }
    </script>
    <script>
      async function updateQuantity(productId, quantityChange) {
          try {
              const response = await fetch(`/updateQuantity/${productId}?change=${quantityChange}`, {
                  method: 'PUT',
              });
              if (response.ok) {
                  const data = await response.json();
                  const quantityElement = document.getElementById(`quantityValue${productId}`);
                  const totalElement = document.getElementById(`total${productId}`);
  
                  if (quantityElement && totalElement) {
                      quantityElement.innerText = data.quantity;
                      totalElement.innerText = data.total;
                  }
              } else {
                  console.error('Failed to update quantity');
              }
          } catch (error) {
              console.error(error);
          }
      }
  </script>
    </body>
    </html>
    
    