<%- include('userSubHeader') %>

    <main class="main">
        <h3 class="text-center mb-4 gruppo-regular" style="font-size: 27px; font-weight: bold;"><span style="color: #009371;">YOUR </span>PROFILE</h3>
      <section class="pt-50 pb-150">
        <div class="container">
          <div class="row">
            <div class="col-lg-10 m-auto">
              <div class="row">
                <div class="col-md-4">
                  <div class="dashboard-menu">
                    <ul class="nav flex-column" role="tablist">
                      <li class="nav-item">
                        <a
                          class="nav-link active"
                          id="dashboard-tab"
                          data-bs-toggle="tab"
                          href="#dashboard"
                          role="tab"
                          aria-controls="dashboard"
                          aria-selected="false"
                          ><i class="fi-rs-settings-sliders mr-10"></i
                          >Dashboard</a
                        >
                      </li>

                      <li class="nav-item">
                        <a
                          class="nav-link"
                          id="address-tab"
                          data-bs-toggle="tab"
                          href="#address"
                          role="tab"
                          aria-controls="address"
                          aria-selected="true"
                          ><i class="fi-rs-marker mr-10"></i>My Address</a
                        >
                      </li>
                      <li class="nav-item">
                        <a class="nav-link" href="/logout"
                          ><i class="fi-rs-sign-out mr-10"></i>Logout</a
                        >
                      </li>
                    </ul>
                  </div>
                </div>
                <div class="col-md-8">
                  <div class="tab-content dashboard-content">
                    <div
                      class="tab-pane fade active show"
                      id="dashboard"
                      role="tabpanel"
                      aria-labelledby="dashboard-tab"
                    >
                      <div class="card mt-2">
                         <div class="card-header ">
                           <h5 class="mb-0 text-dark gruppo-regular" style="font-size: 20px; font-weight: bolder;"> Your Information's</h5>
                                            </div>                   
                        <div class="card p-3 py-4 ">
                          <div class="text-center">
                           
                          </div>

                          <div class="text-center mt-3">
                            <!-- name -->
                            <h5 class="mt-2 mb-0"><%= user.name %></h5>

                            <!-- email -->

                            <span><%= user.email %></span>

                            <div class="px-4 mt-1">
                              <p class="fonts">
                               <%= user.mobile %>
                              </p>
                            </div>
                          </div>                        
                        </div>
                      </div>
                    </div>
                    <div
                      class="tab-pane fade"
                      id="orders"
                      role="tabpanel"
                      aria-labelledby="orders-tab"
                    >
                    </div>
                    <div
                      class="tab-pane fade"
                      id="address"
                      role="tabpanel"
                      aria-labelledby="address-tab"
                    >
                    <div class="col-12 mt-3">
                        <div class="row d-flex">   
                        <!-- profilePage.ejs --> 
                        <% for (let i = 0; i < userAddresses.length; i++) { %>
                            <div class="col-12 col-md-6 col-lg-4 mb-3">
                                <div class="card">
                                    <div class="card-header bg-light">
                                        <h5 style="font-size: 20px;" class="mb-0 text-dark  gruppo-regular">Your Address</h5>
                                    </div>
                                    <div class="card-body">
                                        <address>
                                            <%= userAddresses[i].addressType %> <%= userAddresses[i].houseNo %> <%= userAddresses[i].street %><br />
                                            <%= userAddresses[i].landmark ? userAddresses[i].landmark  : '' %>
                                            <%= userAddresses[i].city %>, <%= userAddresses[i].state %> <%= userAddresses[i].pincode %> <%= userAddresses[i].country %><br />
                                            Phone: <%= userAddresses[i].phoneNumber %>
                                        </address>
                                        <p><%= userAddresses[i].district %></p>
                                        <div class="row">
                                          <div class="col-12 d-flex justify-content-between align-items-center">
                                              <a href="/editAddress/<%= userAddresses[i]._id %>" class="btn gruppo-regular btn-sm bg-light text-dark" style="font-size: 12px;">Edit</a>
                                      
                                              <!-- Add a form for the delete button -->
                                              <form action="/deleteAddress/<%= userAddresses[i]._id %>" method="post" style="display:inline;">
                                                  <button type="submit" class="btn btn-sm bg-dark gruppo-regular" style="font-size: 12px;"  onclick="return confirmDelete()">Delete</button>
                                              </form>
                                          </div>
                                      </div>
                                      
                                    </div>
                                </div>
                            </div>
                        <% } %>
                      </div>
                        <div class="mt-3">
                            <!-- Add Address Button -->
                            <a href="/addAddress"><button class="btn btn-small gruppo-regular text-dark bg-light" style="font-size: 15px;" id="addAddressBtn"><svg xmlns="http://www.w3.org/2000/svg" viewBox="-5 -2 24 24" width="18" fill="currentColor"><path d="M3 2a1 1 0 0 0-1 1v15l2.978-2.717a3 3 0 0 1 4.044 0L12 18V3a1 1 0 0 0-1-1H3zm0-2h8a3 3 0 0 1 3 3v15a2 2 0 0 1-3.348 1.477L7.674 16.76a1 1 0 0 0-1.348 0l-2.978 2.717A2 2 0 0 1 0 18V3a3 3 0 0 1 3-3zm5 8h2a1 1 0 0 1 0 2H8v2a1 1 0 0 1-2 0v-2H4a1 1 0 1 1 0-2h2V6a1 1 0 1 1 2 0v2z"></path></svg> Add Address</button></a> 
                        </div>
                    </div>
                    </div>
                    </div>
                    <div
                      class="tab-pane fade"
                      id="account-detail"
                      role="tabpanel"
                      aria-labelledby="account-detail-tab"
                    >
                  
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>

   
    <!-- Vendor JS-->
    <script src="/user/assets/js/vendor/modernizr-3.6.0.min.js"></script>
    <script src="/user/assets/js/vendor/jquery-3.6.0.min.js"></script>
    <script src="/user/assets/js/vendor/jquery-migrate-3.3.0.min.js"></script>
