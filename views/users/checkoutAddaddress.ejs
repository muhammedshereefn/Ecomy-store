<%- include('userSubHeader') %>

<div class="container">
    <div class="card-body">
        <form method="post" name="enq" action="/checkoutAddingAddress" onsubmit="return validateForm()">
            <div class="row">
                <div class="form-group col-md-6">
                    <label>House Name <span class="required">*</span></label>
                    <input required class="form-control square" name="houseNo" type="text" minlength="3" maxlength="50">
                </div>
                <div class="form-group col-md-6">
                    <label>Street <span class="required">*</span></label>
                    <input required class="form-control square" name="street" type="text" minlength="3" maxlength="50">
                </div>
                <div class="form-group col-md-12">
                    <label>Landmark</label>
                    <input class="form-control square" name="landmark" type="text" maxlength="50">
                </div>
                <div class="form-group col-md-12">
                    <label>Pincode <span class="required">*</span></label>
                    <input required class="form-control square" name="pincode" type="text" pattern="^[0-9]{6}$" title="Pincode must be 6 digits">
                </div>
                <div class="form-group col-md-12">
                    <label>City <span class="required">*</span></label>
                    <input required class="form-control square" name="city" type="text" minlength="3" maxlength="30">
                </div>
                <div class="form-group col-md-12">
                    <label>District</label>
                    <input class="form-control square" name="district" type="text" maxlength="30">
                </div>
                <div class="form-group col-md-12">
                    <label>State <span class="required">*</span></label>
                    <input required class="form-control square" name="state" type="text" minlength="3" maxlength="30">
                </div>
                <div class="form-group col-md-12">
                    <label>Country <span class="required">*</span></label>
                    <input required class="form-control square" name="country" type="text" minlength="3" maxlength="30">
                </div>
                <div class="form-group col-md-12">
                    <label>Phone Number <span class="required">*</span></label>
                    <input required class="form-control square" name="phoneNumber" type="text" pattern="^[0-9]{10}$" title="Phone number must be 10 digits">
                </div>
                <div class="form-group col-md-12">
                    <label>Address Type <span class="required">*</span></label>
                    <select class="form-control square" name="addressType" required>
                        <option value="" disabled selected>Select Address Type</option>
                        <option value="home">Home</option>
                        <option value="work">Work</option>
                        <option value="temp">Temporary</option>
                    </select>
                </div>
                <div class="col-md-12">
                    <button type="submit" class="btn btn-fill-out submit" name="submit" value="Submit">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Vendor JS -->
<script src="/user/assets/js/vendor/jquery-3.6.0.min.js"></script>
<script>
    function validateForm() {
        const phoneNumber = document.forms["enq"]["phoneNumber"].value;
        const pincode = document.forms["enq"]["pincode"].value;

        // Additional JS validation if needed
        if (phoneNumber.length !== 10) {
            alert("Phone number must be 10 digits.");
            return false;
        }
        if (pincode.length !== 6) {
            alert("Pincode must be 6 digits.");
            return false;
        }
        return true;
    }
</script>
</body>
</html>
