<%- include('adminHeader') %>

<div class="container" style="max-width: 800px; margin: 0 auto; padding: 20px; background-color: #f9f9f9; border-radius: 8px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);">
    <h3 style="text-align: center; margin-bottom: 20px;">Add Main Offer</h3>
    
    <form action="/admin/addMainOffer" method="POST" style="display: flex; flex-direction: column; gap: 15px;">
        <div class="form-group">
            <label for="title" style="font-weight: bold;">Offer Title:</label>
            <input type="text" id="title" name="title" required style="padding: 10px; border-radius: 5px; border: 1px solid #ccc; font-size: 1rem; width: 100%;">
        </div>
        <div class="form-group">
            <label for="description" style="font-weight: bold;">Description:</label>
            <textarea id="description" name="description" required style="padding: 10px; border-radius: 5px; border: 1px solid #ccc; font-size: 1rem; width: 100%; height: 100px;"></textarea>
        </div>
        <div class="form-group">
            <label for="hours" style="font-weight: bold;">Countdown Timer:</label>
            <div style="display: flex; flex-wrap: wrap; gap: 10px;">
                <input type="number" id="hours" name="hours" min="0" placeholder="Hours" required style="padding: 10px; border-radius: 5px; border: 1px solid #ccc; font-size: 1rem; flex: 1; min-width: 100px;">
                <input type="number" id="minutes" name="minutes" min="0" placeholder="Minutes" required style="padding: 10px; border-radius: 5px; border: 1px solid #ccc; font-size: 1rem; flex: 1; min-width: 100px;">
                <input type="number" id="seconds" name="seconds" min="0" placeholder="Seconds" required style="padding: 10px; border-radius: 5px; border: 1px solid #ccc; font-size: 1rem; flex: 1; min-width: 100px;">
            </div>
        </div>
        <button type="submit" style="padding: 10px; background-color: #000000; color: white; border: none; border-radius: 5px; cursor: pointer; font-size: 1rem; transition: background-color 0.3s ease;">Add Offer</button>
    </form>

    <!-- List of Offers -->
    <h3 style="text-align: center; margin-top: 30px;">Current Offers</h3>
    <div id="offerList" style="margin-top: 20px;">
        <% if (offers && offers.length > 0) { %>
            <ul style="list-style: none; padding: 0;">
                <% offers.forEach(function(offer) { %>
                    <li style="display: flex; flex-direction: column; align-items: flex-start; padding: 10px; border: 1px solid #ccc; border-radius: 5px; margin-bottom: 10px;">
                        <div style="width: 100%;">
                            <strong><%= offer.title %></strong><br>
                            <span><%= offer.description %></span>
                        </div>
                        <form action="/admin/removeOffer/<%= offer.id %>" method="POST" style="margin-top: 10px; width: 100%;">
                            <button type="submit" style="padding: 5px 10px; background-color: #dc3545; color: white; border: none; border-radius: 5px; cursor: pointer; font-size: 0.9rem; width: 100%;">Remove</button>
                        </form>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p style="text-align: center; color: #666;">No offers available.</p>
        <% } %>
    </div>
</div>

<style>
    /* Responsive styles */
    @media (max-width: 600px) {
        .container {
            padding: 15px;
        }

        h1 {
            font-size: 1.5rem;
        }

        h2 {
            font-size: 1.2rem;
        }

        .form-group input,
        .form-group textarea {
            font-size: 0.9rem;
        }

        button {
            font-size: 0.9rem;
        }
    }
</style>
